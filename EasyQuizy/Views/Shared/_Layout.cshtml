<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Scripts.Render("~/scripts/jquery-1.10.2.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    <title>@ViewBag.Title</title>
</head>
<body style="background-color:#FFFFFF">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <h2 style="color:#C0C0C0"> EasyQuizy </h2>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <span>
                            <span style="color:#C0C0C0" class="glyphicon glyphicon-question-sign" aria-hidden="true"></span>
                            <a style="color:#C0C0C0" href="@Url.Action("", "")">
                                Помощь
                            </a>
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
                <div class="container-fluid">
                    <div class="row">
                        <div id="menu" class="col-sm-3 col-md-2 sidebar" style="background-color:#C0C0C0">
                            @Html.Action("Menu", "Navigation")
                        </div>
                        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main" style="background-color:#FFFFFF">
                            @RenderBody()
                            @RenderSection("scripts", required: false)
                        </div>
                    </div>
                </div>
</body>
</html>
